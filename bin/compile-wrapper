#!/bin/bash

# fail fast
set -o errexit
set -o pipefail

echo() {
  /bin/echo "$1" "$2"
}

on_exit() {
  code=$?
  exitcode=$(mktemp -t exitcode_XXXXX)
  echo $code >> $exitcode
  curl -s -T $exitcode "$EXIT_PUT_URL"
}


trap on_exit EXIT
stty -icanon -echo 2>/dev/null || echo -n ""
compile_dir=$(bin/fetch $1)
bin/compile $compile_dir
bin/stow $compile_dir
